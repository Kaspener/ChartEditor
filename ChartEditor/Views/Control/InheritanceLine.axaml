<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:ChartEditor.Views.Control">
  <Design.PreviewWith>
    <controls:InheritanceLine/>
  </Design.PreviewWith>

  <Style Selector="controls|InheritanceLine">
    <Setter Property="Template">
      <ControlTemplate>
		  <Canvas Height="20" Width="100" Background="Transparent">
			  <Line StartPoint="0, 10" EndPoint="100, 10" Stroke="Black" StrokeThickness="2"/>
			  <TextBlock Text="Extends" Background="White" Margin="15, 0"/>
			  <Polygon Points="80,2.5 80,17.5 100,10" Fill="White" StrokeThickness="1" Stroke="Black"/>
		  </Canvas>
        </ControlTemplate>
    </Setter>
  </Style>
</Styles>
