<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
		Width="300" Height="450"
        x:Class="ChartEditor.Views.ParameterWindow"
        Title="ParameterWindow">
	
	<TabControl>
		<TabItem>
			<TabItem.Header>
				<TextBlock Text="Общие параметры"/>
			</TabItem.Header>
			<TextBox Text="{Binding Strings.MainParameters}"/>
		</TabItem>
		<TabItem>
			<TabItem.Header>
				<TextBlock Text="Атрибуты"/>
			</TabItem.Header>
			<TextBox AcceptsReturn="True" Text="{Binding Strings.Attributes}"/>
		</TabItem>
		<TabItem>
			<TabItem.Header>
				<TextBlock Text="Операции"/>
			</TabItem.Header>
			<TextBox AcceptsReturn="True" Text="{Binding Strings.Operations}"/>
		</TabItem>
	</TabControl>
</Window>
